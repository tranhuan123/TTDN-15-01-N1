<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Đơn vị -->
    <record id="view_don_vi_tree" model="ir.ui.view">
        <field name="name">van_ban.don_vi.tree</field>
        <field name="model">van_ban.don_vi</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="ma_don_vi"/>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_don_vi_form" model="ir.ui.view">
        <field name="name">van_ban.don_vi.form</field>
        <field name="model">van_ban.don_vi</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="ma_don_vi"/>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="active"/>
                        <field name="ghi_chu"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_don_vi" model="ir.actions.act_window">
        <field name="name">Đơn vị</field>
        <field name="res_model">van_ban.don_vi</field>
        <field name="view_mode">tree,form</field>
    </record>

